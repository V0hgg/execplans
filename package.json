{
  "name": "execplans",
  "version": "0.1.3",
  "description": "Scaffold and validate ExecPlan workflows for AI coding assistants",
  "license": "MIT",
  "bin": {
    "execplans": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "ci": "npm run typecheck && npm test && npm run build",
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:check": "npm pack --dry-run",
    "release:patch": "npm version patch -m \"chore(release): %s\"",
    "release:minor": "npm version minor -m \"chore(release): %s\"",
    "release:major": "npm version major -m \"chore(release): %s\"",
    "prepack": "npm run build",
    "prepublishOnly": "npm run ci && npm run release:check",
    "preversion": "npm run ci",
    "version": "npm run changelog && git add CHANGELOG.md",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "conventional-changelog-cli": "^5.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
